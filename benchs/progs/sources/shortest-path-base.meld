type linear path(node, node, int, int).

priority @order @asc.
priority @initial 9999.
index path/2.

const used = 1.
const notused = 0.

path(A, U, B2, Y), path(A, U, B1, X), B1 <= B2
   -o path(A, U, B1, if B1 < B2 then X else (if Y = used then used else X end) end).

path(A, X, D, notused)
   -o {B, W | !edge(A, B, W) | path(B, X, D + W, notused), set-priority(B, float(D + W))}, path(A, X, D, used).


